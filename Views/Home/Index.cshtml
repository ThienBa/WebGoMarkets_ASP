@model WebGoMarkets.ModelViews.HomeViewVM
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Product> allProduct = ViewBag.AllProducts;
}

<!-- Begin Slider Area -->

@model WebGoMarkets.Models.Product

@{
    ViewData["Title"] = "Product infomation " + Model.ProductName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Product list</a>
            <span class="breadcrumb-item active">Product infomation</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Product Infomation</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Product name:</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Short description:</td>
                        <td>@Model.ShortDesc</td>
                    </tr>
                    <tr>
                        <td>Price:</td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td>Discount:</td>
                        <td>@Model.Discount</td>
                    </tr>
                    <tr>
                        <td>Active:</td>
                        <td>
                            @if (Model.Active)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="switch d-inline m-r-10">
                                        <input type="checkbox" disabled="" checked="">
                                        <label></label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" disabled="">
                                        <label></label>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Home flag:</td>
                        <td>
                            @if (Model.HomeFlag)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="switch d-inline m-r-10">
                                        <input type="checkbox" disabled="" checked="">
                                        <label></label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" disabled="">
                                        <label></label>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Best sellers:</td>
                        <td>
                            @if (Model.BestSellers)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="switch d-inline m-r-10">
                                        <input type="checkbox" disabled="" checked="">
                                        <label></label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" disabled="">
                                        <label></label>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Category:</td>
                        <td>@Model.Cat.CatName</td>
                    </tr>
                    <tr>
                        <td>Date created:</td>
                        <td>@Model.DateCreated</td>
                    </tr>
                    <tr>
                        <td>Date modified:</td>
                        <td>@Model.DateModified</td>
                    </tr>
                    <tr>
                        <td>Title:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>Meta desc:</td>
                        <td>@Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>Meta key:</td>
                        <td>@Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>Tags:</td>
                        <td>@Model.Tags</td>
                    </tr>
                    <tr>
                        <td>Thumb:</td>
                        <td>
                            <img width="200" height="200" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>@Html.Raw(Model.Description)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@model WebGoMarkets.Models.Category

@{
    ViewData["Title"] = "Delete category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="Category-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCategorys" asp-action="Index">Category list</a>
            <span class="breadcrumb-item active">Delete Category</span>
        </nav>
    </div>
</div>

<div class="Category-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                <img src="~/images/categories/@Model.Thumb" alt="@Model.Title">
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.CatName</h4>
                <p class="text-muted m-b-0">ID: #@Model.CatId</p>
            </div>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#Category-overview">Overview</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#Category-content">Content</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#Category-images">Category Images</a>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="Category-overview">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">CONFIRM DELETE Category: @Model.CatName.ToUpper()</h1>
                    <div class="table-responsive">
                        <form asp-action="Delete" asp-route-id="@Model.CatId">
                            <input type="hidden" asp-for="CatId" />
                            <table class="product-info-table">
                                <tbody>
                                    <tr>
                                        <td>Category Name:</td>
                                        <td class="text-dark font-weight-semibold">@Model.CatName</td>
                                    </tr>
                                    <tr>
                                        <td>Alias:</td>
                                        <td>@Model.Alias</td>
                                    </tr>
                                    <tr>
                                        <td>Public:</td>
                                        <td>
                                            <div class="checkbox">
                                                @if (Model.Published)
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <div class="switch d-inline m-r-10">
                                                            <input type="checkbox" disabled="" checked="">
                                                            <label></label>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <div class="switch m-r-10">
                                                            <input type="checkbox" disabled="">
                                                            <label></label>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Confirm delete:</td>
                                        <td>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="Category-content">
            <div class="card">
                <div class="card-body">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="Category-images">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img class="img-fluid" src="/images/categories/@Model.Thumb" alt="@Model.CatName" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

